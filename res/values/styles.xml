<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainStyle" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">wrap_content</item> 
		<item name="android:gravity">center</item>
		<item name="android:textSize">20dp</item>
		<item name="android:textStyle">bold</item>
    </style>
   <style name="SplashStyle" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">fill_parent</item> 
		<item name="android:layout_height">wrap_content</item> 
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">@dimen/splash_text_size</item>
		<item name="android:textColor">@color/splash_header_text</item>
		<item name="android:lineSpacingExtra">@dimen/splash_text_spacing</item>
    </style>
</resources>